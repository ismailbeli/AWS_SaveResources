<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
       http://www.liquibase.org/xml/ns/dbchangelog
       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="CreateAwsResourceTable" author="ismail">
        <createTable tableName="aws_resource">
            <column name="identifier" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="service" type="VARCHAR(255)" />
            <column name="resource_type" type="VARCHAR(255)" />
            <column name="region" type="VARCHAR(100)" />
            <column name="owner_account" type="VARCHAR(255)" />
            <column name="application" type="VARCHAR(255)" />
            <column name="tags" type="TEXT" />
            <column name="status" type="VARCHAR(255)" />
        </createTable>
    </changeSet>
    <changeSet id="AddUpdateDateColumnToAwsResource" author="ismail">
        <addColumn tableName="aws_resource">
            <column name="update_date" type="timestamp">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
